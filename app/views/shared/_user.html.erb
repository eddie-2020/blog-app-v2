<section class='d-flex mt-4'>
  <div class=''>
    <%= image_tag(image_control(user.photo), width: 'auto', class: 'user-image w-25') %>
  </div>
  <div class='d-flex flex-column ms-2 ps-2 pe-4 py-1 flex-grow-1 border border-2 shadow-sm'>
    <h2 class='flex-grow-1'>
      <%= link_to user.name, author_path(:id=>user.id) %>
    </h2>
    <p class='text-end fw-bolder text-secondary'><%= t("number_of_posts: ")%> <%= user.posts_counter || 0 %></p>
  </div>
</section>