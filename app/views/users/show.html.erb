<div class="container mt-3">
  <h2 class="text-center"> Users profile number <%= params[:id] %> </h2>
  <section class="d-flex m-4 justify-content-between">

    <article class="border border-secondary border-3 p-5">
      <img src="<%= @user.photo %>">
    </article>

    <article class="border border-secondary border-3 p-3 w-50">
      <h1 class="fs-5 text-uppercase fw-bolder"> <%= @user.name %> </h1>

      <p class="d-flex justify-content-end text-secondary"> Number of posts: <span class="fw-bolder"><%= @user.post_counter || 0 %></span> </p>
    </article>

  </section>

  <section class="border border-secondary p-4 border-3 mt-5 rounded">
    <h2> Bio </h2>

    <p> <%= @user.bio %> </p>
  </section>

  <section>
    <% @user.three_most_recent_posts.each do |post| %>
      <article class="border border-secondary border-3 rounded mt-3 p-2">

        <%= link_to user_post_path(@user.id, post.id), id: "user_post #{post.id}" do %>
          <h4> <%= post.title %> </h4>
        <% end %>

        <p> <%= post.text %> </p>
        
        <div class="d-flex justify-content-end">
          <p class="p-2"> Comments: <span class="fw-bolder"><%= post.comments_counter || 0 %></span> </p>

          <p class="p-2"> Likes: <span class="fw-bolder"><%= post.likes_counter || 0 %></span> </p>
        </div>

      </article>
    <% end %>
  </section>

    <div class="d-flex fixed-bottom justify-content-center mb-4">
      <button type="submit" class="btn-default rounded p-2 fs-7"> <%= link_to 'See all posts', user_posts_path(@user) %> </button>
    </div>
</div>