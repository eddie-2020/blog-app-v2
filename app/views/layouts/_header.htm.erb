<div class="navbar d-flex flex-row justify-content-between navbar-expand-lg navbar-dark bg-dark px-5">
    <% if user_signed_in? %>
    <li class="nav-item px-4">
        <p class="text-secondary">User: <%= current_user.name %></p>
    </li>
    <li class="nav-item">
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-warning mb-1" %>
    </li>
    <% else %>
    <li class="nav-item active">
        <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
    </li>
    <% end %>
</div>