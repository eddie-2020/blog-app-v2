<div class="container mt-4">
  <h2 class="text-center mb-5">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "d-flex justify-content-center w-100 m-auto btn-sm mt-4 mb-2 btn btn-success" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
