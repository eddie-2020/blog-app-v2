<div class="container">
<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'p-2 fw-semibolder text-secondary fs-4' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'p-2 fw-semibolder text-secondary fs-4' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'd-flex justify-content-center w-100 m-auto btn-sm mt-4 mb-2 btn btn-primary'%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
