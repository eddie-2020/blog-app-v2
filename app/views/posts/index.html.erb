<%= render 'shared/user', user: @user %>
<% @posts.each_with_index { |post_, index_| %>
  <%= render partial: 'shared/post', locals:{post: post_, index:index_, index_view: true, show_comment: true} %>
<% } %>
<% if author_posts_more_than?(@user) %>

  <div id="posts-pagination" class='text-center'>
    <% (1..@page_amount).each { |i| %>
      <span><a href='<%= "#{author_posts_path(:author_id => @user.id)}?page=#{i}" %>' class="next_pg"><%= i %></a></span>
    <% } %>
  </div>
<% end %>