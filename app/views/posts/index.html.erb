<div class="container">
  <section class="d-flex m-4 justify-content-between mt-4">
    <article class="border border-secondary border-3 p-5">
      <img src="<%= @user.photo %>" alt="">
    </article>
    <article class="border border-secondary border-3 p-3 w-50">
      <h2> <%= @user.name %> </h2>
      <p> posts status: <%= @user.posts.length %> </p>
    </article>
  </section>

<% @user.posts.each do |post| %>
  <section class="border border-secondary border-3 rounded mt-3 p-2">
    <div>
      <%= link_to user_post_path(@user.id, post.id), id: "user_post #{post.id}" do %>
        <h4> <%= post.title %> </h4>
      <% end %>

      <p> <%= post.text %> </p>

      <div>
        <span class="d-flex justify-content-end fw-semibold text-secondary"> Comments: <%= post.comments.size %> </span>
      </div>
    </div>

    <div>
      <% unless post.comments.empty? %>
        <div>
          <% post.five_most_recent_comments.each do |comment| %>
            <div>
              <li> <%= comment.users.name %> : <%= comment.text %> </li>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
  <div class="d-flex fixed-bottom justify-content-center mb-4">
    <button type="submit" class="btn btn-primary p-2 fs-7"> Pagination </button>
  </div>
</div>