<div class="container">
  <h1 class="mt-3 text-center"> Add a new post </h1>
  <%= form_with model: @post, url: user_posts_path, data: {turbo: false } do |form| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger border border-warning mt-4" role="alert">
      <% @post.errors.full_messages.each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  <% end %>
    <div class="mb-3">
      <%= form.label :title, "Title:", class: "form-label" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Hello" %>
    </div>
    <div class="mb-3">
      <%= form.label :text, class: "form-label" %>
      <%= form.text_area :text, class: "form-control", placeholder: "My first mini post" %>
    </div>
    <%= form.submit "Create Post", class: "btn btn-primary" %>
  <% end %>
</div>