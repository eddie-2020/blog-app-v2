<section class="container">
    <h2 class="text-center mt-4">Create New Post</h2>
    <%= form_with model: @post, url: user_posts_path, scope: :post do |form| %>
    <div class="form-group">
        <%= form.label :title, "Title", class: 'fs-5 fw-bolder' %>
        <%= form.text_field :title, placeholder: "Title", required: true, class: 'form-control w-20' %>
    </div>

    <div>
        <%= form.text_area :text, placeholder: 'Type here...', rows: 10, required: true, class: 'form-control mt-5' %>
    </div>

    <div>
        <%= form.submit "Post", class: 'mt-4 btn btn-primary' %>
    </div>
    <% end %>
</section>