<%= form_with model: @post, scope: :post, url: posts_path, method: :post, local: true do |f| %>
<%= render partial: 'shared/form', locals: {f:f}%>
<%= f.submit "Add Post", class: "d-flex justify-content-center w-100 m-auto btn-sm mt-4 mb-2 btn btn-success", data: {disable_with: "Loading..."} %>
<% end %>